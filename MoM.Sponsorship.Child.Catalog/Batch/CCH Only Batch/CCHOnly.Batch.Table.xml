	ID="2b6c6419-9b3a-4965-9015-4a36c0ebaf2a"
	Name="USR_CCH_ONLY_BATCH"
	Description="Batch table for the custom CCH Only batch type."
	Author="Memphis Sellers"
	Tablename="USR_CCH_ONLY_BATCH"		   
