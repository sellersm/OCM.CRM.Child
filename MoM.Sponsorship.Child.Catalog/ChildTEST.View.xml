<ViewDataFormTemplateSpec 
    xmlns="bb_appfx_viewdataformtemplate"
    xmlns:common="bb_appfx_commontypes"
    ID="bf0481ac-cfd7-4911-89c6-e5684ef97e35"
    Name="ChildExtension TEST"
    Description="ChildExtension Testing of Detail View"
    Author="memphis-PC\Administrator"
    DataFormInstanceID="fc2054a6-9d01-4587-9ae1-316305c09362"
    RecordType="Sponsorship Opportunity"
    common:SecurityUIFolder="Sponsorship\Opportunity"
    >

	<!-- define the SP that returns the data used by the form -->
	<SPDataForm SPName="USP_DATAFORMTEMPLATE_VIEW_CHILDEXTENSION_TEST">
		<common:CreateProcedureSQL>
			<![CDATA[
create procedure dbo.USP_DATAFORMTEMPLATE_VIEW_CHILDEXTENSION_TEST
(
	@ID uniqueidentifier,
	@DATALOADED bit = 0 output,
	@AREADESCRIPTION nvarchar(1000) = null output
)
as
	set nocount on;
	
	-- be sure to set this, in case the select returns no rows
	set @DATALOADED = 0;
	
	-- populate the output parameters, which correspond to fields on the form.  Note that
	-- we set @DATALOADED = 1 to indicate that the load was successful.  Otherwise, the system
	-- will display a "no data loaded" message.
	select @DATALOADED = 1,
		   @AREADESCRIPTION = AREADESCRIPTION
	from dbo.USR_CHILDEXTENSION	
	where ID = @ID
	
	return 0;
			]]>
		</common:CreateProcedureSQL>
	</SPDataForm>

  <!-- describe fields on the form, which correspond to parameters on the SP.  Note that system paramters 
	like the context @ID, @DATALOADED, and @CURRENTAPPUSERID need not be listed. -->
	<common:FormMetaData FixedDialog="true">
		<common:FormFields>
			<common:FormField FieldID="AREADESCRIPTION" Caption="Area Description" DataType="String" MaxLength="1000" />
		</common:FormFields>

        <common:WebUIComponent>
            <common:UIModel AssemblyName="Blackbaud.CustomFx.ChildExtension.UIModel.dll" ClassName="Blackbaud.CustomFx.ChildExtension.UIModel.ChildExtensionTESTUIModel" />
            <common:WebUI>
                <common:ExternalResource Url="browser/htmlforms/custom/ChildExtensionTEST.html" />
            </common:WebUI>
        </common:WebUIComponent>

    
    
    <common:Tabs>
      <common:Tab Caption="Tab 1" ID="TEST_TAB1" />
      <common:Tab Caption="Tab 2" ID="TEST_TAB2" />
    </common:Tabs>
	
  </common:FormMetaData>

 
  
  <!--<common:DataFormExtension DataFormInstanceID="2c5e91ff-ec60-4f8a-9361-9eae6549aa69" RenderStyle="AfterParent" TabCaption="Test" />-->
  
</ViewDataFormTemplateSpec>